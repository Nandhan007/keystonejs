datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  posts     Post[]    @relation("Post_author")
  createdAt DateTime? @default(now())
}

model Post {
  id       String  @id @default(cuid())
  title    String  @default("")
  content  String  @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  author   User?   @relation("Post_author", fields: [authorId], references: [id])
  authorId String? @map("author")
  tags     Tag[]   @relation("Post_tags")

  @@index([authorId])
}

model Tag {
  id    String @id @default(cuid())
  name  String @default("")
  posts Post[] @relation("Post_tags")
}

model Survey {
  id                   String     @id @default(cuid())
  title                String     @default("")
  description          String     @default("")
  questions            Question[] @relation("Question_survey")
  from_Response_survey Response[] @relation("Response_survey")
}

model Question {
  id       String  @id @default(cuid())
  text     String  @default("")
  type     String  @default("text")
  options  String  @default("")
  survey   Survey? @relation("Question_survey", fields: [surveyId], references: [id])
  surveyId String? @map("survey")
  required Boolean @default(false)

  @@index([surveyId])
}

model Response {
  id       String  @id @default(cuid())
  survey   Survey? @relation("Response_survey", fields: [surveyId], references: [id])
  surveyId String? @map("survey")
  answers  String  @default("")

  @@index([surveyId])
}

model MySQLDataList {
  id           String   @id @default(cuid())
  version      String   @default("")
  businessUnit String   @default("")
  month        DateTime
  sales        Int?
}
